<mah:BaseMetroDialog
    x:Class="libQB.DialogServices.GenericDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Margin="20">
        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
            <iconPacks:PackIconMaterial Width="40" Height="40" Kind="{Binding IconKind}" Foreground="{Binding IconColor}"/>
            <TextBlock FontSize="22" Text="{Binding Title}" Margin="10 0" VerticalAlignment="Center"/>
        </StackPanel>

        <TextBlock FontSize="18" Text="{Binding Message}" TextWrapping="Wrap" Margin="0 0 0 20"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button
                mah:ControlsHelper.ContentCharacterCasing="Normal"
                Width="80"
                Margin="0 0 10 0"
                Content="{Binding OkButtonText}"
                Command="{Binding OkCommand}"/>
            <Button
                mah:ControlsHelper.ContentCharacterCasing="Normal"
                Width="80"
                Visibility="{Binding ShowCancel, Converter={StaticResource BooleanToVisibilityConverter}}"
                Content="{Binding CancelButtonText}"
                Command="{Binding CancelCommand}"/>
        </StackPanel>
    </StackPanel>
</mah:BaseMetroDialog>
